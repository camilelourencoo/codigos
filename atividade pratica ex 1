        "class calculadora:\n",
        "  def __init__(self):\n",
        "    self.num1 = 0\n",
        "    self.num2 = 0\n",
        "    self.resultado = 0\n",
        "\n",
        "  def somar (self, num1, num2):\n",
        "    self.num1 = num1\n",
        "    self.num2 = num2\n",
        "    self.resultado = self.num1 + self.num2\n",
        "    return self.resutado\n",
        "\n",
        "  def subtrair (self, num1, num2):\n",
        "    self.num1 = num1\n",
        "    self.num2 = num2\n",
        "    self.resultado = self.num1 - self.num2\n",
        "    return self.resutado\n",
        "\n",
        "  def dividir (self, num1, num2):\n",
        "    self.num1 = num1\n",
        "    self.num2 = num2\n",
        "    self.resultado = self.num1 / self.num2\n",
        "    return self.resutado\n",
        "\n",
        "  def expoente (self, num1, num2):\n",
        "    self.num1 = num1\n",
        "    self.num2 = num2\n",
        "    self.resultado = self.num1 ** self.num2\n",
        "    return self.resutado\n",
        "\n",
        "  def resto (self, num1, num2):\n",
        "    self.num1 = num1\n",
        "    self.num2 = num2\n",
        "    self.resultado = self.num1 % self.num2\n",
        "    return self.resutado\n",
        "\n",
        "def continuar(entrada):\n",
        "  if entrada:\n",
        "    return True\n",
        "  else:\n",
        "    return False\n",
        "\n",
        "def menu():\n",
        "  opção = {1:'adiçaõ',\n",
        "           2:'subtração',\n",
        "           3:'multiplicação',\n",
        "           4:'divisão',\n",
        "           5:'exponenciação',\n",
        "           6:'módulo (resto)'}\n",
        "  calc = calculadora()\n",
        "  print(\"\"\"Qual opeção matematica deseja realizar\n",
        "  1 -> adição\n",
        "  2 -> subtração\n",
        "  3 -> multiplicação\n",
        "  4 -> divisão\n",
        "  5 -> exponenciação\n",
        "  6 -> módulo (resto)\n",
        "  Digite o numero que deseja e aperte ENTER\"\"\")\n",
        "  calcular = True\n",
        "  while calcular:\n",
        "    opc = input(\"Escolha a opção desejada (1, 2, 3, 4, 5, ou 6)\")\n",
        "    if not(opc in '1 2 3 4 5 6'):\n",
        "      print(\"OPÇÃO INVALIDA!!\")\n",
        "      continue\n",
        "    else:\n",
        "      opc = int(opc)\n",
        "      print(\"OPÇÃO ESCOLHIDA É VALIDA!!\")\n",
        "      print(\"Apenas numero inteiros serão utilizados.\")\n",
        "    if opção == 1:\n",
        "      num1 = int(input(\"Digite o penultimo numero do seu RU\"))\n",
        "      num2 = int(input(\"Digite o ultimo numero do seu RU\"))\n",
        "      resultado = calc.somar(num1, num2)\n",
        "      print(f\"O valor desta ádição é {resultado}. \")\n",
        "      calcular = continuar(input(\"Digite OK para continuar ou ENTER para sair da calculadora\"))\n",
        "    elif opção == 2:\n",
        "      num1 = int(input(\"Digite o penultimo numero do seu RU\"))\n",
        "      num2 = int(input(\"Digite o ultimo numero do seu RU\"))\n",
        "      resultado = calc.subtrair(num1, num2)\n",
        "      print(f\"O valor desta subtração é {resultado}. \")\n",
        "      calcular = continuar(input(\"Digite OK para continuar ou ENTER para sair da calculadora\"))\n",
        "    elif opção == 3:\n",
        "      num1 = int(input(\"Digite o penultimo numero do seu RU\"))\n",
        "      num2 = int(input(\"Digite o ultimo numero do seu RU\"))\n",
        "      resultado = calc.multiplicar(num1, num2)\n",
        "      print(f\"O valor desta multiplicação é {resultado}. \")\n",
        "      calcular = continuar(input(\"Digite OK para continuar ou ENTER para sair da calculadora\"))\n",
        "    elif opção == 4:\n",
        "      num1 = int(input(\"Digite o penultimo numero do seu RU\"))\n",
        "      num2 = int(input(\"Digite o ultimo numero do seu RU\"))\n",
        "      resultado = calc.dividir(num1, num2)\n",
        "      print(f\"O valor desta divisão é {resultado}. \")\n",
        "      calcular = continuar(input(\"Digite OK para continuar ou ENTER para sair da calculadora\"))\n",
        "    elif opção == 5:\n",
        "      num1 = int(input(\"Digite o penultimo numero do seu RU\"))\n",
        "      num2 = int(input(\"Digite o ultimo numero do seu RU\"))\n",
        "      resultado = calc.expoente(num1, num2)\n",
        "      print(f\"O valor desta exponenciação é {resultado}. \")\n",
        "      calcular = continuar(input(\"Digite OK para continuar ou ENTER para sair da calculadora\"))\n",
